{
  "extends": [
    "react-app",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "formatjs"
  ],
  "rules": {
    "formatjs/enforce-description": "error",
    "formatjs/enforce-id": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "always"
      }
    ]
  }
}